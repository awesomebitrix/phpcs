<?xml version="1.0"?>
<ruleset name="Webpractik">
	<description>The Webpractik coding standard.</description>

	<rule ref="PSR2">
		<!-- Отключаем пробелы -->
		<exclude name="Generic.WhiteSpace.DisallowTabIndent"/>

		<!-- Отключаем перенос скобки у функций -->
		<exclude name="Generic.Functions.OpeningFunctionBraceBsdAllman"/>
		<exclude name="Generic.Functions.OpeningFunctionBraceBsdAllmanSniff"/>

		<exclude name="Squiz.Functions.FunctionDeclarationArgumentSpacing"/>
	</rule>

	<!-- Утверждаем правильный перенос скобки -->
	<rule ref="Generic.Functions.OpeningFunctionBraceKernighanRitchie"/>

	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
</ruleset>
